{
  "name": "react-p2p-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "P2P state management for React - monorepo",
  "license": "MIT",
  "author": "Peter Dodd",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "bun@1.1.25",
  "scripts": {
    "dev": "bun run --parallel dev --filter='./packages/{signalling-server,example}'",
    "dev:server": "bun --filter=signalling-server dev",
    "dev:example": "bun --filter=example dev",
    "build": "bun run build --filter='./packages/*'",
    "build:lib": "bun --filter=react-p2p build",
    "build:server": "bun --filter=signalling-server build",
    "build:example": "bun --filter=example build",
    "start:server": "bun --filter=signalling-server start",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check --write .",
    "test": "echo \"No tests specified\""
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10"
  }
}
