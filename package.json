{
  "name": "react-p2p-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "P2P state management for React - monorepo",
  "license": "MIT",
  "author": "Peter Dodd",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "bun@1.1.25",
  "scripts": {
    "dev": "bun run --parallel dev --filter='./packages/*'",
    "build": "bun run build --filter='./packages/*'",
    "build:lib": "bun run build --filter=react-p2p",
    "build:server": "bun run build --filter=signalling-server",
    "build:example": "bun run build --filter=example",
    "test": "echo \"No tests specified\""
  }
}
